<div class="container contact-form">
                <h1 class="text-center">Get in touch</h1>
                <p class="text-center">This page is only for vendors. Fill in the form for us to get back to you.</p>
      <hr/>
      <form action="/msg" method="post">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" name="name" class="form-control" placeholder="Full Name">
        
        </div>
        <div class="form-group">
                <label for="email">E-mail</label>
                <input type="email" name="email" class="form-control" placeholder="E-mail"></input>
            
            </div>
            <div class="form-group">
                    <label for="topic">Topic</label>
                    <input type="text" name="topic" class="form-control" placeholder="Purpose of contact">
                
            </div>          
                
            <div class="form-group">
                    <label for="message">Message</label>
                    <textarea type="text" name="message" class="form-control" placeholder="Message"></textarea>
                
            </div>
            <button type="submit" class="btn btn-dark btn-lg btn-block">Send message</button>
</div>